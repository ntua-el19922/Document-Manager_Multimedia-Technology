<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medialab.UsersController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Διαχείριση Χρηστών" />

        <TableView fx:id="usersTable" prefHeight="250.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="usernameCol" prefWidth="100.0" text="Username" />
                <TableColumn fx:id="fullnameCol" prefWidth="150.0" text="Ονοματεπώνυμο" />
                <TableColumn fx:id="typeCol" prefWidth="80.0" text="Τύπος" />
                <TableColumn fx:id="catsCol" prefWidth="200.0" text="Πρόσβαση σε" />
            </columns>
        </TableView>

        <Label style="-fx-font-weight: bold;" text="Επεξεργασία / Προσθήκη Χρήστη:" />

        <HBox spacing="10.0">
            <children>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <TextField fx:id="usernameField" promptText="Username" />
                    <PasswordField fx:id="passwordField" promptText="Password" />
                    <TextField fx:id="fullnameField" promptText="Ονοματεπώνυμο" />
                    <ComboBox fx:id="typeCombo" maxWidth="Infinity" promptText="Role" />
                </VBox>

                <VBox spacing="5.0" minWidth="200.0">
                    <Label text="Επιτρεπτές Κατηγορίες:" />
                    <Label text="(Κρατήστε Ctrl για πολλαπλές)" textFill="#808080" style="-fx-font-size: 10px;" />
                    <ListView fx:id="catsListView" prefHeight="100.0" />
                </VBox>
            </children>
        </HBox>

        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <children>
                <Button onAction="#onAddUser" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Προσθήκη Νέου" />
                <Button onAction="#onUpdateUser" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Ενημέρωση Επιλεγμένου" />
                <Button onAction="#onDeleteUser" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Διαγραφή Επιλεγμένου" />
                <Button onAction="#onClearForm" text="Καθαρισμός Φόρμας" />
            </children>
        </HBox>
    </children>
</VBox>