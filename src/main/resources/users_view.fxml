<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medialab.UsersController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Διαχείριση Χρηστών" />

        <TableView fx:id="usersTable" prefHeight="300.0" prefWidth="500.0">
            <columns>
                <TableColumn fx:id="usernameCol" prefWidth="100.0" text="Username" />
                <TableColumn fx:id="fullnameCol" prefWidth="150.0" text="Ονοματεπώνυμο" />
                <TableColumn fx:id="typeCol" prefWidth="100.0" text="Τύπος" />
            </columns>
        </TableView>

        <Label text="Προσθήκη Νέου Χρήστη:" />

        <HBox spacing="10.0">
            <children>
                <TextField fx:id="usernameField" promptText="Username" />
                <PasswordField fx:id="passwordField" promptText="Password" />
                <TextField fx:id="fullnameField" promptText="Ονοματεπώνυμο" HBox.hgrow="ALWAYS" />
                <ComboBox fx:id="typeCombo" prefWidth="100.0" promptText="Role" />
            </children>
        </HBox>

        <HBox spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onAddUser" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Προσθήκη" />
                <Button mnemonicParsing="false" onAction="#onDeleteUser" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Διαγραφή Επιλεγμένου" />
            </children>
        </HBox>
    </children>
</VBox>