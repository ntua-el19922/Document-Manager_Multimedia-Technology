<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medialab.HistoryController" prefWidth="400.0" prefHeight="300.0">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <Label fx:id="titleLabel" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Ιστορικό" />
    <Label text="Παλαιότερες εκδόσεις κειμένου:" textFill="grey"/>

    <ListView fx:id="historyList" VBox.vgrow="ALWAYS" />

    <Button text="Κλείσιμο" onAction="#onClose" maxWidth="Infinity"/>
</VBox>