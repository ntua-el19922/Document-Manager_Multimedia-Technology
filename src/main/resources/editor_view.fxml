<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medialab.EditorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="statusLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Editor" />

    <HBox spacing="10.0">
        <TextField fx:id="titleField" promptText="Τίτλος Εγγράφου" HBox.hgrow="ALWAYS" />
        <ComboBox fx:id="categoryCombo" prefWidth="150.0" promptText="Κατηγορία" />
    </HBox>

    <Label text="Περιεχόμενο:" />
    <TextArea fx:id="contentArea" prefHeight="300.0" prefWidth="500.0" wrapText="true" />

    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <Button onAction="#onCancel" text="Ακύρωση" />
        <Button onAction="#onSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Αποθήκευση" />
        <Button text="Ιστορικό" onAction="#onHistory" />
    </HBox>
</VBox>