<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medialab.MainController">

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Εφαρμογή">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onLogoutClick" text="Αποσύνδεση" />
                    </items>
                </Menu>

                <Menu fx:id="adminMenu" mnemonicParsing="false" text="Διαχείριση">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Χρήστες" onAction="#onUsersMenuClick" />
                        <MenuItem mnemonicParsing="false" text="Κατηγορίες" onAction="#onCategoriesMenuClick" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <left>
        <VBox spacing="15.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc; -fx-border-width: 0 1 0 0;" BorderPane.alignment="CENTER">
            <children>
                <Label style="-fx-font-weight: bold; -fx-underline: true;" text="Πληροφορίες Συστήματος" />
                <Label fx:id="userInfoLabel" text="Χρήστης: ..." wrapText="true" />
                <Label text="-----------------" />
                <Label fx:id="totalDocsLabel" text="Συνολικά Έγγραφα: 0" />
                <Label fx:id="totalCatsLabel" text="Κατηγορίες: 0" />
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <prefWidth>200.0</prefWidth>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" BorderPane.alignment="CENTER">
            <children>
                <Label text="Επιλέξτε μια ενέργεια από το μενού" textFill="#8c8c8c" />
            </children>
        </StackPane>
    </center>

</BorderPane>